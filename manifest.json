{
  "manifest_version": 3,
  "name": "eBay Product Scraper",
  "version": "1.0",
  "description": "Scrape open eBay product page and save to Google Sheets",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": [
    "https://www.ebay.com/*",
    "https://script.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
